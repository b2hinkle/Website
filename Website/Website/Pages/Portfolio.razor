        <footer class="text-center" style="padding-top: 5rem; padding-bottom: 5rem; background-color: #2c3e50; color: #fff;">
            <div class="container">
                <div class="row">
                    <!-- Footer Location-->
                    <div class="col-lg-4 mb-5 mb-lg-0">
